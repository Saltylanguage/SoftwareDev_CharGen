<Window x:Class="PathfinderCharGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathfinderCharGen"
        mc:Ignorable="d"
        Title="Char Gen" Height="1010" Width="1800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!--=================== CUSTOM TEXTBOX =================-->
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}"
                    x:Name="Bd" BorderBrush="Black"
                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="10"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!--=================== END OF CUSTOM TEXTBOX =================-->
    </Window.Resources>

    <DockPanel>
    <!--=================== MENU =================-->
    <Menu Name="menu_Main" Grid.Column="0" Grid.Row="0" DockPanel.Dock="Top">
        <MenuItem Header="File">
            <MenuItem Header="_New Character"/>
            <MenuItem Header="_Load Character"/>
            <MenuItem Header="_Quit"/>
        </MenuItem>
        <MenuItem Header="Edit">
            <MenuItem Header="C_ut" />
            <MenuItem Header="_Copy" />
            <MenuItem Header="_Paste"/>
        </MenuItem>
        <MenuItem Header="View">
            <MenuItem Header="CharacterWindow"/>
        </MenuItem>
    </Menu>
    <!--=================== END OF MENU =================-->

    <TabControl>
        <TabItem Header="Combat">

            <!--=================== MAIN GRID =================-->
                <Grid Name="grid_Main" Background="White" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <!--=================== DEFINE MAIN GRID COLUMNS AND ROWS =================-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="Column1" Width="350"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!--=================== END OF COLUMN AND ROW DEFINITIONS =================-->

                    
                                              
                
                
                <!--=================== SUB-GRID: NAME AND PLAYER INFO =================-->
                <Grid Name="grid_CharInfo" Grid.Column="0" Grid.Row="2" Height="166" VerticalAlignment="Top">
                    <!--=================== 5 ROWS, 2 COLUMNS =================-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <!--=================== END OF ROW/COL DEFINITIONS =================-->


                    <!--=================== PLAYER LABELS =================-->
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2">
                        <TextBlock Text="Player Name" FontSize=     "21" Margin="2"/>
                        <TextBlock Text="Character Name" FontSize=  "21" Margin="2"/>
                        <TextBlock Text="Race" FontSize=            "21" Margin="2"/>
                        <TextBlock Text="Class" FontSize=           "21" Margin="2"/>
                        <TextBlock Text="Level" FontSize=           "21" Margin="2"/>
                    </StackPanel>
                    <!--=================== END OF PLAYER LABELS =================-->

                    <!--=================== PLAYER INFO FIELDS =================-->
                    <StackPanel Orientation="Vertical" Width="190" Grid.Column="1" Grid.Row="2">
                        <TextBox Name="PlayerName" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="2" Background="Black" Foreground="White" Width="180" Height="30" VerticalAlignment="Top" FontSize="16"/>
                        <TextBox Name="CharacterName"  Template="{StaticResource TextBoxBaseControlTemplate}" Margin="2" Background="Black" Foreground="White" Width="180" Height="30" VerticalAlignment="Top" FontSize="16"/>
                        <TextBox Name="CharacterRace"  Template="{StaticResource TextBoxBaseControlTemplate}" Margin="2" Background="Black" Foreground="White" Width="180" Height="30" VerticalAlignment="Top" FontSize="16"/>
                        <TextBox Name="CharacterClass"  Template="{StaticResource TextBoxBaseControlTemplate}" Margin="2" Background="Black" Foreground="White" Width="180" Height="30" VerticalAlignment="Top" FontSize="16"/>
                        <TextBox Name="CharacterLevel"  Template="{StaticResource TextBoxBaseControlTemplate}" Background="Black" Foreground="White" Height="30" Width="30" VerticalAlignment="Top" FontSize="16" Margin="5,0,155,0" TextAlignment="Center"/>
                    </StackPanel>
                    <!--=================== END OF PLAYER INFO FIELDS =================-->
                </Grid>
                <!--=================== END OF NAME AND PLAYER INFO SUB-GRID =================-->


                <!--=================== CHARACTER IMAGE =================-->
                    <Image Margin="15" Source="Resources/PhilipJFry_art.jpg" Grid.Column="0" Grid.Row="1" Width="{Binding ActualWidth + 20, ElementName=Column1}"/>



                <!--=================== END OF CHARACTER IMAGE =================-->


                <!--=================== MAIN STAT BLOCK SUB-GRID =================-->
                <Grid Name="grid_StatBlock" Height="auto" Width="353" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2">

                    <!--=================== 7 ROWS, 5 COLUMNS =================-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <!--=================== END OF ROW/COL DEFINITIONS =================-->

                    <!--=================== LABEL ROW =================-->
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10">
                        <TextBlock Text="Ability" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
                    </Border>
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="1">
                        <TextBlock Text="Score" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
                    </Border>
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="2">
                        <TextBlock Text="Mod" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
                    </Border>
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="3">
                        <TextBlock FontSize="20" Foreground="White">
                        <Run Text="Temp"/>
                        <LineBreak/>
                        <Run Text="Score"/>
                        </TextBlock>
                    </Border>
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="4">
                        <TextBlock Height="Auto" FontSize="20" Foreground="White" VerticalAlignment="Center">
                        <Run Text="Temp"/>
                        <LineBreak/>
                        <Run Text="Mod"/>
                        </TextBlock>
                    </Border>
                    <!--=================== END OF LABEL ROW =================-->


                    <!--=================== STRENGTH ROW =================-->
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="0" Grid.Row="1">
                        <TextBlock Text="STR" FontSize="20" TextAlignment="Center" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBox Name="STR_Score" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Row="1" Grid.Column="1"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                    <TextBox Name="STR_Mod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="2" Grid.Row="1"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                    <TextBox Name="STR_TempScore" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="3" Grid.Row="1"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                    <TextBox Name="STR_TempMod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="4" Grid.Row="1"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                    <!--=================== END OF STRENGTH ROW =================-->

                    <!--=================== DEXTERITY ROW =================-->
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="0" Grid.Row="2">
                        <TextBlock Text="DEX" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBox Name="DEX_Score" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="1" Grid.Row="2"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="DEX_Mod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="2" Grid.Row="2"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="DEX_TempScore" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="3" Grid.Row="2"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="DEX_TempMod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="4" Grid.Row="2"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                    <!--=================== END OF DEXTERITY ROW =================-->


                    <!--=================== CONSTITUTION ROW =================-->
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="0" Grid.Row="3">
                        <TextBlock Text="CON" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                        <TextBox Name="CON_Score" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="1" Grid.Row="3"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox  Name="CON_Mod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="2" Grid.Row="3"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="CON_TempScore" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="3" Grid.Row="3"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="CON_TempMod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="4" Grid.Row="3"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                    <!--=================== END OF CONSTITUTION ROW =================-->


                    <!--=================== INTELLIGENCE ROW =================-->
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="0" Grid.Row="4">
                        <TextBlock Text="INT" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                        <TextBox Name="INT_Score" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="1" Grid.Row="4"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="INT_Mod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="2" Grid.Row="4"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="INT_TempScore" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="3" Grid.Row="4"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="INT_TempMod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="4" Grid.Row="4"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                    <!--=================== END OF INTELLIGENCE ROW =================-->


                    <!--=================== WISDOM ROW =================-->
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="0" Grid.Row="5">
                        <TextBlock Text="WIS" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                        <TextBox Name="WIS_Score" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="1" Grid.Row="5"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="WIS_Mod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="2" Grid.Row="5"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="WIS_TempScore" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="3" Grid.Row="5"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="WIS_TempMod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="4" Grid.Row="5"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                    <!--=================== END OF WISDOM ROW =================-->


                    <!--=================== CHARISMA ROW =================-->
                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Column="0" Grid.Row="6">
                        <TextBlock Text="CHA" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                        <TextBox Name="CHA_Score" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="1" Grid.Row="6"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="CHA_Mod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="2" Grid.Row="6"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="CHA_TempScore" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="3" Grid.Row="6"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                        <TextBox Name="CHA_TempMod" Template="{StaticResource TextBoxBaseControlTemplate}" Margin="5"
                         Grid.Column="4" Grid.Row="6"
                         Background="Whitesmoke" Foreground="Black"                         
                         FontSize="28" TextAlignment="Center"/>
                    <!--=================== END OF CHARISMA ROW =================-->
                </Grid>
                <!--=================== END OF MAIN STAT BLOCK SUB-GRID =================-->

                <Grid Grid.Row="2" Grid.Column="2" Margin="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>


                    <TextBlock Text="     ATTACK:" FontSize="40" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="12" TextAlignment="Center"/>

                    <Border Margin="5" Padding="5" BorderThickness="1" CornerRadius="10" Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="Total" FontSize="12" Foreground="Black" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="BAB" FontSize="12" Foreground="Black" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="3"/>

                    <Border Margin="5" Padding="5" BorderThickness="1" CornerRadius="10" Grid.Row="1" Grid.Column="5">
                        <TextBlock Text="Ability" FontSize="12" Foreground="Black" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Margin="5" Padding="5" BorderThickness="1" CornerRadius="10" Grid.Row="1" Grid.Column="7">
                        <TextBlock Text="Size" FontSize="12" Foreground="Black" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Margin="5" Padding="5" BorderThickness="1"  CornerRadius="10" Grid.Row="1" Grid.Column="9">
                        <TextBlock Text="Misc." FontSize="12" Foreground="Black" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Margin="5" Padding="5" BorderThickness="1"  CornerRadius="10" Grid.Row="1" Grid.Column="11">
                        <TextBlock Text="Temp" FontSize="12" Foreground="Black" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Row="2">
                        <TextBlock Text="Melee Attack Bonus (MAB)" FontSize="12" Foreground="White" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                        <TextBox Name="MAB_Total" Template="{StaticResource TextBoxBaseControlTemplate}"
                     Margin="15,0" FontSize="16" Height="30"  Background="WhiteSmoke"
                     MinWidth="30" Width="auto" Grid.Row="2" Grid.Column="1" TextAlignment="Center"/>
                    <TextBlock Text="=" FontSize="20" Foreground="Black" 
                     Width="auto" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2"/>
                        <TextBox Name="MAB_Base" Template="{StaticResource TextBoxBaseControlTemplate}"
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" Grid.Row="2" Grid.Column="3" TextAlignment="Center"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="4"/>
                        <TextBox Name="MAB_AbilityBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="2" Grid.Column="5"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="6"/>
                        <TextBox Name="MAB_SizeBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16" Height="30"  Background="WhiteSmoke"
                     MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="2" Grid.Column="7"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="8"/>
                        <TextBox Name="MAB_MiscBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="2" Grid.Column="9"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="10"/>
                        <TextBox Name="MAB_TempBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="2" Grid.Column="11"/>


                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Row="3">
                        <TextBlock Text="Combat Maneuver Bonus (CMB)" FontSize="12" Foreground="White" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBox Name="CMB_Total" Template="{StaticResource TextBoxBaseControlTemplate}"
                     Margin="15,0" FontSize="16" Height="30"  Background="WhiteSmoke"
                     MinWidth="30" Width="auto" Grid.Row="3" Grid.Column="1" TextAlignment="Center"/>
                    <TextBlock Text="=" FontSize="20" Foreground="Black" 
                     Width="auto" VerticalAlignment="Center" Grid.Row="3" Grid.Column="2"/>
                        <TextBox Name="CMB_Base" Template="{StaticResource TextBoxBaseControlTemplate}"
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" Grid.Row="3" Grid.Column="3" TextAlignment="Center"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="4"/>
                        <TextBox Name="CMB_AbilityBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="3" Grid.Column="5"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="6"/>
                        <TextBox Name="CMB_SizeBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16" Height="30"  Background="WhiteSmoke"
                     MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="3" Grid.Column="7"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="8"/>
                        <TextBox Name="CMB_MiscBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="3" Grid.Column="9"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="10"/>
                        <TextBox Name="CMB_TempBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="3" Grid.Column="11"/>

                    <Border Margin="5" Padding="5" BorderThickness="1" Background="Black" CornerRadius="10" Grid.Row="4">
                        <TextBlock Text="Ranged Attack Bonus (RAB)" FontSize="12" Foreground="White" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBox Name="RAB_Total" Template="{StaticResource TextBoxBaseControlTemplate}"
                     Margin="15,0" FontSize="16" Height="30"  Background="WhiteSmoke"
                     MinWidth="30" Width="auto" Grid.Row="4" Grid.Column="1" TextAlignment="Center"/>
                    <TextBlock Text="=" FontSize="20" Foreground="Black" 
                     Width="auto" VerticalAlignment="Center" Grid.Row="4" Grid.Column="2"/>
                        <TextBox Name="RAB_Base" Template="{StaticResource TextBoxBaseControlTemplate}"
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke" 
                     Height="30" MinWidth="30" Width="auto" Grid.Row="4" Grid.Column="3" TextAlignment="Center"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4" Grid.Column="4"/>
                        <TextBox Name="RAB_AbilityBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="4" Grid.Column="5"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4" Grid.Column="6"/>
                        <TextBox Name="RAB_SizeBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16" Height="30"  Background="WhiteSmoke"
                     MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="4" Grid.Column="7"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4" Grid.Column="8"/>
                        <TextBox Name="RAB_MiscBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="4" Grid.Column="9"/>
                    <TextBlock Text="+" FontSize="20" Foreground="Black" 
                       Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4" Grid.Column="10"/>
                        <TextBox Name="RAB_TempBonus" Template="{StaticResource TextBoxBaseControlTemplate}" 
                     Margin="15,0" FontSize="16"  Background="WhiteSmoke"
                     Height="30" MinWidth="30" Width="auto" TextAlignment="Center" Grid.Row="4" Grid.Column="11"/>
                </Grid>



                <!--=================== DEFENSE STAT SUB-GRID =================-->
                <Grid Name="grid_Defense" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,713,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>

                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Height="70" VerticalAlignment="Top">
                        <TextBlock Padding="20" Text="HP" FontSize="28" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Padding="20" Text="MAX HP" FontSize="28" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Padding="40" Text="AC" FontSize="28" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
